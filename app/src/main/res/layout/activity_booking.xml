<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDBD2"
    tools:context=".ui.BookingActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Book a Flight"
        android:textColor="#9C27B0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:autofillHints=""
        android:backgroundTint="#E4F3EBEE"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#020202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="68dp"
        android:text="FROM:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/startingPoint"
        app:layout_constraintStart_toStartOf="@+id/personName"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <EditText
        android:id="@+id/startingPoint"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Starting point"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="51dp"
        android:layout_height="25dp"
        android:layout_marginTop="37dp"
        android:text="TO:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/endPoint"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Destination"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/startingPoint"
        app:layout_constraintStart_toStartOf="@+id/startingPoint"
        app:layout_constraintTop_toBottomOf="@+id/startingPoint" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="34dp"
        android:text="DEPART:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/departDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/departDate"
        android:layout_width="231dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/endPoint"
        app:layout_constraintStart_toStartOf="@+id/endPoint"
        app:layout_constraintTop_toBottomOf="@+id/endPoint" />

    <TextView
        android:id="@+id/df"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="RETURN:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/returnDate"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Date return"
        android:inputType="date"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/departDate"
        app:layout_constraintStart_toStartOf="@+id/departDate"
        app:layout_constraintTop_toBottomOf="@+id/departDate" />

    <Button
        android:id="@+id/submitData"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="182dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/economyClass" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="CLASS:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/df"
        app:layout_constraintTop_toBottomOf="@+id/df" />

    <EditText
        android:id="@+id/economyClass"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Economy/Business"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/returnDate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/returnDate"
        app:layout_constraintTop_toBottomOf="@+id/returnDate" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="CODE"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/codeEnter"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Iata/Icao Code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/economyClass"
        app:layout_constraintStart_toStartOf="@+id/economyClass"
        app:layout_constraintTop_toBottomOf="@+id/economyClass" />
</androidx.constraintlayout.widget.ConstraintLayout>