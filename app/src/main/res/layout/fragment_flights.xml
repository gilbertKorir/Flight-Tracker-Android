<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FlightsFragment"
    android:background="@drawable/img_2">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="“Once you have tasted flight, you will forever walk the earth with your eyes turned skyward, for there you have been, and there you will always long to return.” "
        android:textColor="#070707"
        android:textSize="27sp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="350dp"
        android:background="@color/teal_200"
        android:text="Search Airport"
        android:textColor="#EDF8F3F1"
        app:cornerRadius="15dp" />


    <Button
        android:id="@+id/savedAirportsButton"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="450dp"
        android:text="Saved Airports"
        app:cornerRadius="15dp" />
</FrameLayout>